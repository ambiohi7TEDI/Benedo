<!-- views/users/edit.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css">
</head>

<body>
  <div class="max-w-md mx-auto my-4 bg-white p-6 rounded-md shadow-md">
    <h1 class="text-lg font-medium mb-4">Edit User</h1>
    <% if (message) { %>
      <div class="bg-red-200 p-2 rounded-md mb-4">
        <p class="text-red-800">
          <%= message %>
        </p>
      </div>
    <% } %>
    <form method="POST" action="/users/<%= user.id %>?_method=PUT">
      <div class="mb-4">
        <label class="block text-gray-700 font-medium mb-2" for="firstName">First Name</label>
        <input class="w-full p-2 border border-gray-400 rounded-md" type="text" id="firstName" name="firstName"
          value="<%= user.firstName %>" required>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-medium mb-2" for="lastName">Last Name</label>
        <input class="w-full p-2 border border-gray-400 rounded-md" type="text" id="lastName" name="lastName"
          value="<%= user.lastName %>" required>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-medium mb-2" for="email">Email</label>
        <input class="w-full p-2 border border-gray-400 rounded-md" type="email" id="email" name="email"
          value="<%= user.email %>" required>
      </div>
      <div class="mb-4">
        <button class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" type="submit">Save
          Changes</button>
        <a class="bg-gray-300 text-gray-800 px-4 py-2 rounded-md hover:bg-gray-400" href="/users">Cancel</a>
      </div>
    </form>
  </div>
</body>
</html>